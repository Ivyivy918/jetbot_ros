ros2 run camera_calibration cameracalibrator \
  --size 9x7 \
  --square 0.017 \
  --approximate 0.1 \
  --ros-args \
  -r left:=/camera_left/image_raw \
  -r right:=/camera_right/image_raw \
  -r left_camera:=/camera_left \
  -r right_camera:=/camera_right

	# 解压校准结果
cd /tmp
tar -xzf calibrationdata.tar.gz

# 创建目录（如果不存在）
mkdir -p ~/jetbot_ros/config

# 复制并重命名
cp ost.yaml ~/jetbot_ros/config/left.yaml
# 如果有右相机的单独文件
# cp right.yaml ~/jetbot_ros/config/right.yaml

# 或者如果是立体校准，文件名可能是：
# left-0000.yaml 和 right-0000.yaml
ls /tmp/*.yaml  # 查看实际生成的文件名

# 复制到 config
cp /tmp/left*.yaml ~/jetbot_ros/config/left.yaml
cp /tmp/right*.yaml ~/jetbot_ros/config/right.yaml

# 更新到最新版本
sudo apt update
sudo apt install --reinstall ros-humble-camera-calibration

# 或是從源碼安裝最新版
cd ~/ros2_ws/src
git clone -b humble https://github.com/ros-perception/image_pipeline.git
cd ~/ros2_ws
colcon build --packages-select camera_calibration
source install/setup.bash

